# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

if [ -d "/opt/python/bin" ] ; then
    PATH="/opt/python/bin:$PATH"
fi

# read in the project environment variables
for v in $HOME/project/.env/*; do
    [ -e "$v" ] || break
    export `basename $v`="`cat $v`"
done
if [ -d "$HOME/project/.venv/bin" ] ; then
    PATH="$HOME/project/.venv/bin:$PATH"
fi
