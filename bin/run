#!/bin/sh

exec "${APP_ENVIRONMENT}/bin/gunicorn" \
    --chdir "${APP_PATH}" \
    --pythonpath "${APP_PATH}" \
    --bind "unix:${APP_PATH}/.gunicorn.socket" \
    --workers "${APP_WORKERS}" \
    --threads "${APP_THREADS}" \
    --log-syslog-to "unix:///dev/log#dgram" --log-syslog \
    --name "thepoint ${environment}" \
    "${APP_MODULE}"
